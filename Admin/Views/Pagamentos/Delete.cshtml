@{
    ViewData["Title"] = "Cancelar Pagamento";
}
@model Admin.Models.PagamentoViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h1 class="h3 fw-bold text-danger mb-0">Cancelar Pagamento</h1>
                    <p class="text-muted">Tem certeza que deseja cancelar/estornar este pagamento? Esta ação não pode ser desfeita.</p>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <span class="material-symbols-outlined me-2">warning</span>
                        <div>
                            <strong>Atenção!</strong> O cancelamento do pagamento afetará a reserva associada e poderá gerar reembolsos se o valor já tiver sido compensado.
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="fw-medium mb-3">Dados do Pagamento:</h5>
                        <div class="row">
                            <div class="col-sm-6">
                                <small class="text-muted">ID do Pagamento:</small>
                                <p class="fw-medium">#@Model.Id</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">ID da Reserva:</small>
                                <p class="fw-medium">#@Model.ReservaId</p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6">
                                <small class="text-muted">Cliente:</small>
                                <p class="fw-medium">@Model.ClienteNome</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Atividade:</small>
                                <p class="fw-medium">@Model.ReservaDescricao</p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6">
                                <small class="text-muted">Valor:</small>
                                <p class="fw-medium text-danger">R$ @Model.Valor.ToString("N2")</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Status Atual:</small>
                                <p class="fw-medium">
                                    @{
                                        var statusBadge = Model.Status switch
                                        {
                                            "Pago" => "bg-success",
                                            "Pendente" => "bg-warning",
                                            "Cancelado" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusBadge text-white">@Model.Status</span>
                                </p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <small class="text-muted">Data do Pagamento:</small>
                                <p class="fw-medium">@Model.DataPagamentoFormatada</p>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ChavePix))
                        {
                            <div class="row mt-2">
                                <div class="col-12">
                                    <small class="text-muted">Chave PIX:</small>
                                    <p class="fw-medium font-monospace">@Model.ChavePix</p>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <span class="material-symbols-outlined me-2">arrow_back</span>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <span class="material-symbols-outlined me-2">cancel</span>
                                Confirmar Cancelamento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
