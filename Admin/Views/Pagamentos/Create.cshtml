@{

    ViewData["Title"] = "Novo Pagamento";

}

@model Admin.Models.PagamentoViewModel



<div class="container-fluid px-0 mt-4">

    <div class="row justify-content-center">

        <div class="col-lg-6">

            <div class="card border-0 shadow-sm rounded-3">

                <div class="card-header bg-white border-0 pt-4 pb-0">

                    <h1 class="h3 fw-bold text-dark mb-0">Novo Pagamento</h1>

                    <p class="text-muted">Preencha os dados para registrar um novo pagamento PIX.</p>

                </div>

                <div class="card-body p-4">

                    <form asp-action="Create" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        

                        <div class="mb-3">

                            <label asp-for="ReservaId" class="form-label fw-medium">Reserva</label>

                            <select asp-for="ReservaId" class="form-select" required>

                                <option value="">Selecione uma reserva</option>

                                @if (ViewBag.Reservas is IEnumerable<Admin.Models.ReservaViewModel> reservas && reservas.Any())

                                {

                                    foreach (var reserva in reservas)

                                    {

                                        <option value="@reserva.Id">#@reserva.Id - @reserva.UsuarioNome (@reserva.AgendaDescricao)</option>

                                    }

                                }

                            </select>

                            <span asp-validation-for="ReservaId" class="text-danger"></span>

                        </div>

                        

                        <div class="mb-3">

                            <label asp-for="Valor" class="form-label fw-medium">Valor</label>

                            <div class="input-group">

                                <span class="input-group-text">R$</span>

                                <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0" required />

                            </div>

                            <span asp-validation-for="Valor" class="text-danger"></span>

                        </div>

                        

                        <div class="row">

                            <div class="col-md-6">

                                <div class="mb-3">

                                    <label asp-for="Status" class="form-label fw-medium">Status</label>

                                    <select asp-for="Status" class="form-select" required>

                                        <option value="">Selecione o status</option>

                                        <option value="Pendente">Pendente</option>

                                        <option value="Pago">Pago</option>

                                        <option value="Cancelado">Cancelado</option>

                                    </select>

                                    <span asp-validation-for="Status" class="text-danger"></span>

                                </div>

                            </div>

                            <div class="col-md-6">

                                <div class="mb-3">

                                    <label asp-for="Metodo" class="form-label fw-medium">Método</label>

                                    <select asp-for="Metodo" class="form-select" required>

                                        <option value="">Selecione o método</option>

                                        <option value="Pix">PIX</option>

                                    </select>

                                    <span asp-validation-for="Metodo" class="text-danger"></span>

                                </div>

                            </div>

                        </div>

                        

                        <div class="mb-3">

                            <label asp-for="DataPagamento" class="form-label fw-medium">Data do Pagamento</label>

                            <input asp-for="DataPagamento" class="form-control" type="datetime-local" required />

                            <span asp-validation-for="DataPagamento" class="text-danger"></span>

                        </div>

                        

                        <div class="d-flex justify-content-between">

                            <a asp-action="Index" class="btn btn-light">

                                <span class="material-symbols-outlined me-2">arrow_back</span>

                                Voltar

                            </a>

                            <button type="submit" class="btn btn-success">

                                <span class="material-symbols-outlined me-2">save</span>

                                Registrar Pagamento

                            </button>

                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>



