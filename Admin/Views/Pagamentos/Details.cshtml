@{
    ViewData["Title"] = "Detalhes do Pagamento";
}
@model Admin.Models.PagamentoViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h1 class="h3 fw-bold text-dark mb-2">Detalhes do Pagamento</h1>
                            <p class="text-muted mb-0">Informações completas do pagamento PIX.</p>
                        </div>
                        <div>
                            @{
                                var statusBadge = Model.Status switch
                                {
                                    "Pago" => "bg-success",
                                    "Pendente" => "bg-warning",
                                    "Cancelado" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusBadge text-white fs-6">
                                @Model.Status
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <h5 class="fw-medium mb-3">Informações do Pagamento</h5>
                            <div class="mb-3">
                                <small class="text-muted">ID do Pagamento:</small>
                                <p class="fw-medium">#@Model.Id</p>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">ID da Reserva:</small>
                                <p class="fw-medium">#@Model.ReservaId</p>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Cliente:</small>
                                <p class="fw-medium fs-5">@Model.ClienteNome</p>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Atividade:</small>
                                <p class="fw-medium">@Model.ReservaDescricao</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h5 class="fw-medium mb-3">Valores</h5>
                            <div class="mb-3">
                                <small class="text-muted">Valor:</small>
                                <p class="fw-bold fs-4 text-success">R$ @Model.Valor.ToString("N2")</p>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Método:</small>
                                <p class="fw-medium">
                                    <span class="material-symbols-outlined fs-6 align-middle me-1">qr_code_2</span>
                                    @Model.Metodo
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="border-top pt-4">
                        <h5 class="fw-medium mb-3">Dados da Transação</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">Data do Pagamento:</small>
                                <p class="fw-medium">@Model.DataPagamentoFormatada</p>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">Status:</small>
                                <p class="fw-medium">
                                    <span class="badge @statusBadge text-white">@Model.Status</span>
                                </p>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.ChavePix))
                        {
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <small class="text-muted">Chave PIX:</small>
                                    <p class="fw-medium font-monospace">@Model.ChavePix</p>
                                </div>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.QrCode))
                        {
                            <div class="row mt-2">
                                <div class="col-12">
                                    <small class="text-muted">QR Code:</small>
                                    <div class="mt-2 p-3 bg-light rounded-3 text-center">
                                        <img src="data:image/png;base64,@Model.QrCode" alt="QR Code do PIX" style="max-width: 200px;" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-light">
                            <span class="material-symbols-outlined me-2">arrow_back</span>
                            Voltar para Lista
                        </a>
                        <div class="d-flex gap-2">
                            @if (Model.Status != "Pago")
                            {
                                <form asp-action="ConfirmarPagamento" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-success">
                                        <span class="material-symbols-outlined me-2">check_circle</span>
                                        Confirmar Pagamento
                                    </button>
                                </form>
                            }
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <span class="material-symbols-outlined me-2">edit</span>
                                Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <span class="material-symbols-outlined me-2">cancel</span>
                                Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
