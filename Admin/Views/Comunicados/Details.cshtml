@model Admin.Models.ComunicadoViewModel
@{
    ViewData["Title"] = "Detalhes do Comunicado";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center bg-@(GetTipoHeaderClass(Model.Tipo)) text-white">
                    <h4 class="mb-0">@Model.Titulo</h4>
                    <span class="badge bg-light text-dark">@Model.TipoDescricao</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>ID:</strong> #@Model.Id
                        </div>
                        <div class="col-md-6 text-end">
                            <strong>Status:</strong> 
                            @if (Model.Ativo)
                            {
                                <span class="badge bg-success">Ativo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inativo</span>
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5>Conteúdo</h5>
                        <div class="border rounded p-3 bg-light">
                            @Html.Raw(Model.Conteudo.Replace("\n", "<br />"))
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <strong><i class="bi bi-calendar-plus"></i> Data de Criação:</strong><br>
                            @Model.DataCriacaoFormatada
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Autor))
                        {
                            <div class="col-md-6">
                                <strong><i class="bi bi-person"></i> Autor:</strong><br>
                                @Model.Autor
                            </div>
                        }
                    </div>

                    @if (Model.DataInicio.HasValue || Model.DataFim.HasValue)
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <strong><i class="bi bi-clock"></i> Período de Exibição:</strong><br>
                                @Model.PeriodoExibicao
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    string GetTipoHeaderClass(Admin.Models.TipoComunicado tipo)
    {
        return tipo switch
        {
            Admin.Models.TipoComunicado.Comunicado => "primary",
            Admin.Models.TipoComunicado.Noticia => "info",
            Admin.Models.TipoComunicado.Aviso => "warning",
            Admin.Models.TipoComunicado.Atualizacao => "success",
            Admin.Models.TipoComunicado.Evento => "danger",
            _ => "secondary"
        };
    }
}
