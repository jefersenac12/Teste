@{
    ViewData["Title"] = "Detalhes da Atividade";
}
@model Admin.Models.AtividadeViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h1 class="h3 fw-bold text-dark mb-2">Detalhes da Atividade</h1>
                            <p class="text-muted mb-0">Informações completas da atividade agrícola.</p>
                        </div>
                        <div>
                            <span class="badge bg-success text-white fs-6">
                                <span class="material-symbols-outlined fs-6 align-middle me-1">payments</span>
                                R$ @Model.Valor.ToString("N2")
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <h5 class="fw-medium mb-3">Informações da Atividade</h5>
                            <div class="mb-3">
                                <small class="text-muted">ID da Atividade:</small>
                                <p class="fw-medium">#@Model.Id</p>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Nome da Atividade:</small>
                                <p class="fw-medium fs-5">@Model.Nome</p>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Descricao))
                            {
                                <div class="mb-3">
                                    <small class="text-muted">Descrição:</small>
                                    <p class="fw-medium">@Model.Descricao</p>
                                </div>
                            }
                        </div>
                        <div class="col-md-4">
                            <h5 class="fw-medium mb-3">Valores</h5>
                            <div class="mb-3">
                                <small class="text-muted">Valor por Hectare:</small>
                                <p class="fw-medium fs-5 text-success">R$ @Model.Valor.ToString("N2")</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="border-top pt-4">
                        <h5 class="fw-medium mb-3">Resumo de Operações</h5>
                        <div class="row text-center">
                            <div class="col-md-3">
                                <div class="bg-light rounded-3 p-3">
                                    <h4 class="fw-bold text-primary mb-1">0</h4>
                                    <small class="text-muted">Agendamentos</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="bg-light rounded-3 p-3">
                                    <h4 class="fw-bold text-success mb-1">0</h4>
                                    <small class="text-muted">Reservas</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="bg-light rounded-3 p-3">
                                    <h4 class="fw-bold text-info mb-1">0 ha</h4>
                                    <small class="text-muted">Área Total</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="bg-light rounded-3 p-3">
                                    <h4 class="fw-bold text-warning mb-1">R$ 0</h4>
                                    <small class="text-muted">Faturamento</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-light">
                            <span class="material-symbols-outlined me-2">arrow_back</span>
                            Voltar para Lista
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <span class="material-symbols-outlined me-2">edit</span>
                                Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <span class="material-symbols-outlined me-2">delete</span>
                                Excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
