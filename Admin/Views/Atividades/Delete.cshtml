@{
    ViewData["Title"] = "Excluir Atividade";
}
@model Admin.Models.AtividadeViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h1 class="h3 fw-bold text-danger mb-0">Excluir Atividade</h1>
                    <p class="text-muted">Tem certeza que deseja excluir esta atividade? Esta ação não pode ser desfeita.</p>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.TemDependencias == true)
                    {
                        <div class="alert alert-danger d-flex align-items-start" role="alert">
                            <span class="material-symbols-outlined me-2 mt-1">error</span>
                            <div>
                                <strong>⚠️ ATENÇÃO! Esta atividade possui dependências!</strong><br>
                                <div class="mt-2">
                                    <strong>Dependências encontradas:</strong><br>
                                    • <strong>@ViewBag.QuantidadeAgendas</strong> agenda(s) vinculada(s)<br>
                                    • <strong>@ViewBag.QuantidadeReservas</strong> reserva(s) vinculada(s)<br><br>
                                    <small>Para excluir esta atividade, você precisará excluir manualmente as reservas e agendas vinculadas primeiro.</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <span class="material-symbols-outlined me-2">info</span>
                            <div>
                                <strong>Ordem recomendada para exclusão:</strong><br>
                                1️⃣ Primeiro exclua as <strong>reservas</strong> vinculadas<br>
                                2️⃣ Depois exclua as <strong>agendas</strong> vinculadas<br>
                                3️⃣ Por fim, exclua a <strong>atividade</strong>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <span class="material-symbols-outlined me-2">warning</span>
                            <div>
                                <strong>Atenção!</strong> A exclusão da atividade removerá todos os agendamentos e reservas associados a ela.
                            </div>
                        </div>
                    }
                    
                    <div class="mb-4">
                        <h5 class="fw-medium mb-3">Dados da Atividade:</h5>
                        <div class="row">
                            <div class="col-sm-6">
                                <small class="text-muted">Nome:</small>
                                <p class="fw-medium">@Model.Nome</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Valor:</small>
                                <p class="fw-medium">
                                    <span class="badge bg-success text-white">
                                        <span class="material-symbols-outlined fs-6 align-middle me-1">payments</span>
                                        R$ @Model.Valor.ToString("N2")
                                    </span>
                                </p>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Descricao))
                        {
                            <div class="row mt-2">
                                <div class="col-12">
                                    <small class="text-muted">Descrição:</small>
                                    <p class="fw-medium">@Model.Descricao</p>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <span class="material-symbols-outlined me-2">arrow_back</span>
                                Cancelar
                            </a>
                            @if (ViewBag.TemDependencias == true)
                            {
                                <button type="submit" class="btn btn-danger" disabled
                                        title="Exclua as dependências primeiro">
                                    <span class="material-symbols-outlined me-2">block</span>
                                    Excluir Dependências Primeiro
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger">
                                    <span class="material-symbols-outlined me-2">delete</span>
                                    Confirmar Exclusão
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
