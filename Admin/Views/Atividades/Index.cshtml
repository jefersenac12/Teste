@{
    ViewData["Title"] = "Gerenciar Atividades";
}
@model IEnumerable<Admin.Models.AtividadeViewModel>

<div class="container-fluid px-0 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 fw-bold text-dark mb-0">Gerenciar Atividades</h1>
        <a class="btn btn-success d-flex align-items-center fw-semibold shadow-sm" asp-action="Create">
            <span class="material-symbols-outlined me-2">add</span>
            Nova Atividade
        </a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var atividade in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm rounded-3">
                    <div class="card-body d-flex flex-column justify-content-between p-4">
                        <div>
                            <h3 class="card-title h5 fw-semibold text-dark mb-2">@atividade.Nome</h3>

                            <p class="card-text text-secondary small mb-3 text-truncate" title="@atividade.Descricao">
                                @atividade.Descricao
                            </p>

                            <p class="card-text text-secondary small mb-0">
                                Valor: <span class="fw-medium text-dark">@atividade.ValorFormatado</span>
                            </p>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-3 pt-2">
                            <a class="btn btn-light btn-sm rounded-circle p-2 text-secondary d-flex align-items-center justify-content-center"
                               asp-action="Details" asp-route-id="@atividade.Id"
                               title="Ver detalhes" style="width:36px;height:36px;">
                                <span class="material-symbols-outlined fs-5">visibility</span>
                            </a>

                            <a class="btn btn-light btn-sm rounded-circle p-2 text-secondary d-flex align-items-center justify-content-center"
                               asp-action="Edit" asp-route-id="@atividade.Id"
                               title="Editar atividade" style="width:36px;height:36px;">
                                <span class="material-symbols-outlined fs-5">edit</span>
                            </a>

                            <a class="btn btn-light btn-sm rounded-circle p-2 text-danger d-flex align-items-center justify-content-center"
                               asp-action="Delete" asp-route-id="@atividade.Id"
                               title="Excluir atividade" style="width:36px;height:36px;">
                                <span class="material-symbols-outlined fs-5">delete</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination (mesma estrutura de Usu�rios / Safras / Reservas) -->
    <div class="d-flex justify-content-end mt-4">
        <nav aria-label="Navega��o de p�gina">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Anterior">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Pr�ximo">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

