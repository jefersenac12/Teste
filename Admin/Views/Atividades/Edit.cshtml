@{
    ViewData["Title"] = "Editar Atividade";
}
@model Admin.Models.AtividadeViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h1 class="h3 fw-bold text-dark mb-0">Editar Atividade</h1>
                    <p class="text-muted">Atualize os dados da atividade agrícola.</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-medium">Nome da Atividade</label>
                            <input asp-for="Nome" class="form-control" required />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                            <small class="text-muted">Ex: "Preparo do Solo", "Plantio", "Colheita"</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label fw-medium">Descrição</label>
                            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                            <small class="text-muted">Descreva detalhes da atividade (opcional)</small>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Valor" class="form-label fw-medium">Valor por Hectare</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0" required />
                            </div>
                            <span asp-validation-for="Valor" class="text-danger"></span>
                            <small class="text-muted">Valor cobrado por hectare para esta atividade</small>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <span class="material-symbols-outlined me-2">arrow_back</span>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <span class="material-symbols-outlined me-2">save</span>
                                Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
