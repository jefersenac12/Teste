@{
    ViewData["Title"] = "Excluir Agendamento";
}
@model Admin.Models.AgendamentoViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h1 class="h3 fw-bold text-danger mb-0">Excluir Agendamento</h1>
                    <p class="text-muted">Tem certeza que deseja excluir este agendamento? Esta ação não pode ser desfeita.</p>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <span class="material-symbols-outlined me-2">warning</span>
                        <div>
                            <strong>Atenção!</strong> A exclusão do agendamento removerá todas as reservas associadas a este evento.
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="fw-medium mb-3">Dados do Agendamento:</h5>
                        <div class="row">
                            <div class="col-sm-6">
                                <small class="text-muted">Atividade:</small>
                                <p class="fw-medium">@Model.AtividadeNome</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Status:</small>
                                <p class="fw-medium">
                                    <span class="badge @(Model.VagasDisponiveis > 0 ? "bg-success" : "bg-danger") text-white">
                                        @(Model.VagasDisponiveis > 0 ? "Disponível" : "Esgotado")
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6">
                                <small class="text-muted">Safra:</small>
                                <p class="fw-medium">@Model.SafraNome</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Data e Hora:</small>
                                <p class="fw-medium">@Model.DataHora.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6">
                                <small class="text-muted">Vagas Totais:</small>
                                <p class="fw-medium">@Model.VagasTotais</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Vagas Disponíveis:</small>
                                <p class="fw-medium">@Model.VagasDisponiveis</p>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <span class="material-symbols-outlined me-2">arrow_back</span>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <span class="material-symbols-outlined me-2">delete</span>
                                Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
