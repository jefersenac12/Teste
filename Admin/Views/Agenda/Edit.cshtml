@{
    ViewData["Title"] = "Editar Agendamento";
}
@model Admin.Models.AgendamentoViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h1 class="h3 fw-bold text-dark mb-0">Editar Agendamento</h1>
                    <p class="text-muted">Atualize os dados do agendamento de atividade.</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="SafraId" class="form-label fw-medium">Safra</label>
                            <select asp-for="SafraId" class="form-select" required>
                                <option value="">Selecione uma safra</option>
                                <!-- As opções serão carregadas via API -->
                            </select>
                            <span asp-validation-for="SafraId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="AtividadeId" class="form-label fw-medium">Atividade</label>
                            <select asp-for="AtividadeId" class="form-select" required>
                                <option value="">Selecione uma atividade</option>
                                <!-- As opções serão carregadas via API -->
                            </select>
                            <span asp-validation-for="AtividadeId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="DataHora" class="form-label fw-medium">Data e Hora</label>
                            <input asp-for="DataHora" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="DataHora" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="VagasTotais" class="form-label fw-medium">Vagas Totais</label>
                                    <input asp-for="VagasTotais" class="form-control" type="number" min="1" required />
                                    <span asp-validation-for="VagasTotais" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="VagasDisponiveis" class="form-label fw-medium">Vagas Disponíveis</label>
                                    <input asp-for="VagasDisponiveis" class="form-control" type="number" min="0" required />
                                    <span asp-validation-for="VagasDisponiveis" class="text-danger"></span>
                                    <small class="text-muted">Não pode ser maior que as vagas totais</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <span class="material-symbols-outlined me-2">arrow_back</span>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <span class="material-symbols-outlined me-2">save</span>
                                Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const vagasTotaisInput = document.getElementById('VagasTotais');
            const vagasDisponiveisInput = document.getElementById('VagasDisponiveis');
            
            // Ajustar máximo de vagas disponíveis quando as vagas totais mudarem
            vagasTotaisInput.addEventListener('change', function() {
                vagasDisponiveisInput.max = this.value;
                
                // Se as vagas disponíveis forem maiores que as totais, ajustar
                if (parseInt(vagasDisponiveisInput.value) > parseInt(this.value)) {
                    vagasDisponiveisInput.value = this.value;
                }
            });
            
            // Validar que vagas disponíveis não são maiores que as totais
            vagasDisponiveisInput.addEventListener('change', function() {
                if (parseInt(this.value) > parseInt(vagasTotaisInput.value)) {
                    this.value = vagasTotaisInput.value;
                }
            });
        });
    </script>
}
