@{
    ViewData["Title"] = "Novo Agendamento";
}
@model Admin.Models.AgendamentoViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h1 class="h3 fw-bold text-dark mb-0">Novo Agendamento</h1>
                    <p class="text-muted">Preencha os dados para criar um novo agendamento de atividade.</p>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Aviso != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @ViewBag.Aviso
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="SafraId" class="form-label fw-medium">Safra</label>
                            <select asp-for="SafraId" class="form-select" required>
                                <option value="">Selecione uma safra</option>
                                @if (ViewBag.Safras is IEnumerable<Admin.Models.SafraViewModel> safras && safras.Any())
                                {
                                    foreach (var s in safras)
                                    {
                                        <option value="@s.Id">@s.Nome (@s.DataInicio.ToString("dd/MM/yyyy") - @s.DataFim.ToString("dd/MM/yyyy"))</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="SafraId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="AtividadeId" class="form-label fw-medium">Atividade</label>
                            <select asp-for="AtividadeId" class="form-select" required>
                                <option value="">Selecione uma atividade</option>
                                @if (ViewBag.Atividades is IEnumerable<Admin.Models.AtividadeViewModel> atividades && atividades.Any())
                                {
                                    foreach (var a in atividades)
                                    {
                                        <option value="@a.Id">@a.Nome</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="AtividadeId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="DataHora" class="form-label fw-medium">Data e Hora</label>
                            <input asp-for="DataHora" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="DataHora" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="VagasTotais" class="form-label fw-medium">Vagas Totais</label>
                            <input asp-for="VagasTotais" class="form-control" type="number" min="1" required />
                            <span asp-validation-for="VagasTotais" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="VagasDisponiveis" class="form-label fw-medium">Vagas Dispon√≠veis</label>
                            <input asp-for="VagasDisponiveis" class="form-control" type="number" min="0" required />
                            <span asp-validation-for="VagasDisponiveis" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <span class="material-symbols-outlined me-2">arrow_back</span>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <span class="material-symbols-outlined me-2">save</span>
                                Criar Agendamento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

