@{
    ViewData["Title"] = "Cancelar Reserva";
}
@model Admin.Models.ReservaViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h1 class="h3 fw-bold text-danger mb-0">Cancelar Reserva</h1>
                    <p class="text-muted">Tem certeza que deseja cancelar esta reserva? Esta ação não pode ser desfeita.</p>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.TemPagamentos == true)
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <span class="material-symbols-outlined me-2">error</span>
                            <div>
                                <strong>Atenção!</strong> Esta reserva possui <strong>@ViewBag.QuantidadePagamentos pagamento(s)</strong> associado(s). 
                                @if (ViewBag.PagamentosPagos > 0)
                                {
                                    <text>Destes, <strong>@ViewBag.PagamentosPagos já estão pagos</strong> totalizando <strong>@ViewBag.ValorTotalFormatado</strong>. </text>
                                }
                                Ao excluir esta reserva, todos os pagamentos serão <strong>cancelados/estornados</strong> e as vagas serão liberadas na agenda.
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <span class="material-symbols-outlined me-2">warning</span>
                            <div>
                                <strong>Atenção!</strong> Esta reserva não possui pagamentos registrados, mas ao excluí-la as <strong>@Model.Quantidade vaga(s)</strong> serão liberadas na agenda.
                            </div>
                        </div>
                    }

                    @if (ViewBag.AgendaPassada == true)
                    {
                        <div class="alert alert-info d-flex align-items-center" role="alert">
                            <span class="material-symbols-outlined me-2">info</span>
                            <div>
                                <strong>Informação!</strong> Esta agenda já ocorreu em <strong>@ViewBag.DataAgendaFormatada</strong>. 
                                A exclusão desta reserva será apenas para fins de <strong>limpeza de histórico</strong> e auditoria.
                            </div>
                        </div>
                    }
                    else if (ViewBag.DiasParaAgenda <= 1)
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <span class="material-symbols-outlined me-2">schedule</span>
                            <div>
                                <strong>Atenção!</strong> Esta agenda está prevista para <strong>@ViewBag.DataAgendaFormatada</strong> 
                                (@ViewBag.DiasParaAgenda dia(s)). A exclusão em curto prazo pode afetar o planejamento do cliente.
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <span class="material-symbols-outlined me-2">event_available</span>
                            <div>
                                <strong>Bom!</strong> Esta agenda está prevista para <strong>@ViewBag.DataAgendaFormatada</strong> 
                                (@ViewBag.DiasParaAgenda dias). As vagas serão liberadas com antecedência para outros clientes.
                            </div>
                        </div>
                    }
                    
                    <div class="mb-4">
                        <h5 class="fw-medium mb-3">Dados da Reserva:</h5>
                        <div class="row">
                            <div class="col-sm-6">
                                <small class="text-muted">ID da Reserva:</small>
                                <p class="fw-medium">#@Model.Id</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Atividade:</small>
                                <p class="fw-medium">@Model.AgendaDescricao</p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6">
                                <small class="text-muted">Usuário:</small>
                                <p class="fw-medium">@Model.UsuarioNome</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Data da Reserva:</small>
                                <p class="fw-medium">@Model.DataReservaFormatada</p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6">
                                <small class="text-muted">Total de Pessoas:</small>
                                <p class="fw-medium">@(Model.NPEntrada + Model.MeiaEntrada + Model.InteiraEntrada)</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Valor Total:</small>
                                <p class="fw-medium text-success">@Model.ValorTotalFormatado</p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6">
                                <small class="text-muted">NP Entrada:</small>
                                <p class="fw-medium">@Model.NPEntrada</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Meia Entrada:</small>
                                <p class="fw-medium">@Model.MeiaEntrada</p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6">
                                <small class="text-muted">Inteira Entrada:</small>
                                <p class="fw-medium">@Model.InteiraEntrada</p>
                            </div>
                            <div class="col-sm-6">
                                <small class="text-muted">Data/Hora do Agendamento:</small>
                                <p class="fw-medium">@ViewBag.DataAgendaFormatada</p>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <span class="material-symbols-outlined me-2">arrow_back</span>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <span class="material-symbols-outlined me-2">cancel</span>
                                Confirmar Cancelamento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
