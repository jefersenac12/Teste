@{
    ViewData["Title"] = "Nova Reserva";
}
@model Admin.Models.ReservaViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h1 class="h3 fw-bold text-dark mb-0">Nova Reserva</h1>
                    <p class="text-muted">Preencha os dados para criar uma nova reserva.</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="AgendaId" class="form-label fw-medium">Agendamento</label>
                            <select asp-for="AgendaId" class="form-select" required>
                                <option value="">Selecione um agendamento</option>
                                @if (ViewBag.Agendas is IEnumerable<Admin.Models.AgendamentoViewModel> agendas && agendas.Any())
                                {
                                    foreach (var agenda in agendas)
                                    {
                                        <option value="@agenda.Id">#@agenda.Id - @agenda.AtividadeNome (@agenda.DataHoraFormatada)</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="AgendaId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UsuarioId" class="form-label fw-medium">Usuário</label>
                            <select asp-for="UsuarioId" class="form-select" required>
                                <option value="">Selecione um usuário</option>
                                @if (ViewBag.Usuarios is IEnumerable<Admin.Models.UsuarioViewModel> usuarios && usuarios.Any())
                                {
                                    foreach (var usuario in usuarios)
                                    {
                                        <option value="@usuario.Id">@usuario.Nome (@usuario.Identificador)</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="UsuarioId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="DataReserva" class="form-label fw-medium">Data da Reserva</label>
                            <input asp-for="DataReserva" class="form-control" type="date" required />
                            <span asp-validation-for="DataReserva" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="NPEntrada" class="form-label fw-medium">Não Pagantes</label>
                                    <input asp-for="NPEntrada" class="form-control" type="number" min="0" value="0" />
                                    <span asp-validation-for="NPEntrada" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="MeiaEntrada" class="form-label fw-medium">Meia Entrada</label>
                                    <input asp-for="MeiaEntrada" class="form-control" type="number" min="0" value="0" />
                                    <span asp-validation-for="MeiaEntrada" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="InteiraEntrada" class="form-label fw-medium">Inteira</label>
                                    <input asp-for="InteiraEntrada" class="form-control" type="number" min="0" value="0" />
                                    <span asp-validation-for="InteiraEntrada" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="ValorTotal" class="form-label fw-medium">Valor Total</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="ValorTotal" class="form-control" type="number" step="0.01" min="0" required />
                            </div>
                            <span asp-validation-for="ValorTotal" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <span class="material-symbols-outlined me-2">arrow_back</span>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <span class="material-symbols-outlined me-2">save</span>
                                Criar Reserva
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
