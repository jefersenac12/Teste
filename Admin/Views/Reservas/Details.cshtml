@{
    ViewData["Title"] = "Detalhes da Reserva";
}
@model Admin.Models.ReservaViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h1 class="h3 fw-bold text-dark mb-2">Detalhes da Reserva</h1>
                            <p class="text-muted mb-0">Informações completas da reserva realizada.</p>
                        </div>
                        <div>
                            <span class="badge bg-success text-white fs-6">
                                <span class="material-symbols-outlined fs-6 align-middle me-1">check_circle</span>
                                Confirmada
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <h5 class="fw-medium mb-3">Informações da Reserva</h5>
                            <div class="mb-3">
                                <small class="text-muted">ID da Reserva:</small>
                                <p class="fw-medium">#@Model.Id</p>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Atividade:</small>
                                <p class="fw-medium fs-5">@Model.AtividadeNome</p>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Usuário:</small>
                                <p class="fw-medium">
                                    <span class="material-symbols-outlined fs-6 align-middle me-1">person</span>
                                    @Model.UsuarioNome
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h5 class="fw-medium mb-3">Data e Hora</h5>
                            <div class="mb-3">
                                <small class="text-muted">Data da Reserva:</small>
                                <p class="fw-medium">@Model.DataReserva.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Data/Hora Agendamento:</small>
                                <p class="fw-medium">@Model.DataHoraAgendamento</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="border-top pt-4">
                        <h5 class="fw-medium mb-3">Detalhes das Entradas</h5>
                        <div class="row text-center mb-3">
                            <div class="col-md-3">
                                <div class="bg-light rounded-3 p-3">
                                    <h4 class="fw-bold text-primary mb-1">@Model.NPEntrada</h4>
                                    <small class="text-muted">Não Pagantes</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="bg-light rounded-3 p-3">
                                    <h4 class="fw-bold text-warning mb-1">@Model.MeiaEntrada</h4>
                                    <small class="text-muted">Meia Entrada</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="bg-light rounded-3 p-3">
                                    <h4 class="fw-bold text-success mb-1">@Model.InteiraEntrada</h4>
                                    <small class="text-muted">Inteira</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="bg-light rounded-3 p-3">
                                    <h4 class="fw-bold text-info mb-1">@(Model.NPEntrada + Model.MeiaEntrada + Model.InteiraEntrada)</h4>
                                    <small class="text-muted">Total</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">Valor Total:</small>
                                <p class="fw-bold fs-4 text-success">R$ @Model.ValorTotal.ToString("N2")</p>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">Valor por Pessoa:</small>
                                @{
                                    var valorPorPessoa = (Model.NPEntrada + Model.MeiaEntrada + Model.InteiraEntrada) > 0 ? 
                                        Model.ValorTotal / (Model.NPEntrada + Model.MeiaEntrada + Model.InteiraEntrada) : 0;
                                }
                                <p class="fw-medium">R$ @valorPorPessoa.ToString("N2")</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-light">
                            <span class="material-symbols-outlined me-2">arrow_back</span>
                            Voltar para Lista
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <span class="material-symbols-outlined me-2">edit</span>
                                Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <span class="material-symbols-outlined me-2">cancel</span>
                                Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
