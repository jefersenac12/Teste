@{
    ViewData["Title"] = "Gerenciar Reservas";
}
@model IEnumerable<Admin.Models.ReservaViewModel>

<div class="container-fluid px-0 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 fw-bold text-dark mb-0">Gerenciar Reservas</h1>
        <a class="btn btn-success d-flex align-items-center fw-semibold shadow-sm" asp-action="Create">
            <span class="material-symbols-outlined me-2">add</span>
            Nova Reserva
        </a>
    </div>

    <div id="reservas-container" class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var reserva in Model)
        {
            <div class="col reserva-item">
                <div class="card h-100 border-0 shadow-sm rounded-3">
                    <div class="card-body d-flex flex-column justify-content-between p-4">
                        <div>
                            <h3 class="card-title h5 fw-semibold text-dark mb-2">
                                @reserva.UsuarioNome
                            </h3>

                            <p class="card-text text-secondary small mb-1">
                                Agendamento:
                                <span class="fw-medium text-dark">@reserva.AgendaDescricao</span>
                            </p>

                            <p class="card-text text-secondary small mb-1">
                                Usuário:
                                <span class="fw-medium text-dark">@reserva.UsuarioNome</span>
                            </p>

                            <p class="card-text text-secondary small mb-1">
                                Data da Reserva:
                                <span class="fw-medium text-dark">@reserva.DataReservaFormatada</span>
                            </p>

                            <div class="mt-3 text-secondary small">
                                <div class="d-flex justify-content-between">
                                    <span>Quantidade:</span>
                                    <span class="fw-medium text-dark">@reserva.Quantidade</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Valor Total:</span>
                                    <span class="fw-bold text-success">R$ @reserva.ValorTotal.ToString("N2")</span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-3 pt-2">
                            <a class="btn btn-light btn-sm rounded-circle p-2 text-secondary d-flex align-items-center justify-content-center"
                               asp-action="Details" asp-route-id="@reserva.Id"
                               title="Ver detalhes" style="width: 36px; height: 36px;">
                                <span class="material-symbols-outlined fs-5">visibility</span>
                            </a>

                            <a class="btn btn-light btn-sm rounded-circle p-2 text-secondary d-flex align-items-center justify-content-center"
                               asp-action="Edit" asp-route-id="@reserva.Id"
                               title="Editar reserva" style="width: 36px; height: 36px;">
                                <span class="material-symbols-outlined fs-5">edit</span>
                            </a>

                            <a class="btn btn-light btn-sm rounded-circle p-2 text-danger d-flex align-items-center justify-content-center"
                               asp-action="Delete" asp-route-id="@reserva.Id"
                               title="Excluir reserva" style="width: 36px; height: 36px;">
                                <span class="material-symbols-outlined fs-5">delete</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @{
        var paginaAtual = ViewBag.PaginaAtual is int ? (int)ViewBag.PaginaAtual : 1;
        var tamanhoPagina = ViewBag.TamanhoPagina is int ? (int)ViewBag.TamanhoPagina : 8;
        var totalPaginas = ViewBag.TotalPaginas is int ? (int)ViewBag.TotalPaginas : 1;
        if (totalPaginas < 1) { totalPaginas = 1; }
        if (paginaAtual < 1) { paginaAtual = 1; }
        if (paginaAtual > totalPaginas) { paginaAtual = totalPaginas; }
        var paginaAnterior = paginaAtual > 1 ? paginaAtual - 1 : 1;
        var proximaPagina = paginaAtual < totalPaginas ? paginaAtual + 1 : totalPaginas;
        var totalItens = ViewBag.TotalItens is int ? (int)ViewBag.TotalItens : (Model?.Count() ?? 0);
        var inicio = totalItens == 0 ? 0 : ((paginaAtual - 1) * tamanhoPagina) + 1;
        var fim = totalItens == 0 ? 0 : inicio + (Model?.Count() ?? 0) - 1;
    }
    <div class="d-flex justify-content-between align-items-center mt-4">
        <span class="text-muted small">Mostrando @inicio a @fim de @totalItens resultados</span>
        <nav aria-label="Navegação de página">
            <ul class="pagination mb-0">
                <li class="page-item @(paginaAtual == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@paginaAnterior"
                       asp-route-tamanhoPagina="@tamanhoPagina"
                       aria-label="Anterior">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (var i = 1; i <= totalPaginas; i++)
                {
                    <li class="page-item @(i == paginaAtual ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pagina="@i"
                           asp-route-tamanhoPagina="@tamanhoPagina">@i</a>
                    </li>
                }
                <li class="page-item @(paginaAtual == totalPaginas ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@proximaPagina"
                       asp-route-tamanhoPagina="@tamanhoPagina"
                       aria-label="Próximo">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
