@{
    ViewData["Title"] = "Gerenciar Reservas";
}
@model IEnumerable<Admin.Models.ReservaViewModel>

<div class="container-fluid px-0 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 fw-bold text-dark mb-0">Gerenciar Reservas</h1>
        <button class="btn btn-success d-flex align-items-center fw-semibold shadow-sm" type="button" onclick="document.getElementById('reservation-form-overlay').classList.remove('d-none')">
            <span class="material-symbols-outlined me-2">add</span>
            Nova Reserva
        </button>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var reserva in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm rounded-3">
                    <div class="card-body d-flex flex-column justify-content-between p-4">
                        <div>
                            <h3 class="card-title h5 fw-semibold text-dark mb-2">
                                @reserva.Titulo
                            </h3>

                            <p class="card-text text-secondary small mb-1">
                                Safra:
                                <span class="fw-medium text-dark">@reserva.Safra</span>
                            </p>

                            <p class="card-text text-secondary small mb-1">
                                Usuário:
                                <span class="fw-medium text-dark">@reserva.Usuario</span>
                            </p>

                            <p class="card-text text-secondary small mb-1">
                                Data da Reserva:
                                <span class="fw-medium text-dark">@reserva.DataReserva.ToString("dd/MM/yyyy")</span>
                            </p>

                            <div class="mt-3 text-secondary small">
                                <div class="d-flex justify-content-between">
                                    <span>Quantidade:</span>
                                    <span class="fw-medium text-dark">@reserva.QuantidadeDescricao</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Valor Total:</span>
                                    <span class="fw-bold text-success">@reserva.ValorTotal.ToString("C")</span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-3 pt-2">
                            <button class="btn btn-light btn-sm rounded-circle p-2 text-secondary d-flex align-items-center justify-content-center"
                                    title="Ver detalhes"
                                    style="width: 36px; height: 36px;">
                                <span class="material-symbols-outlined fs-5">visibility</span>
                            </button>

                            <button class="btn btn-light btn-sm rounded-circle p-2 text-secondary d-flex align-items-center justify-content-center"
                                    onclick="document.getElementById('reservation-form-overlay').classList.remove('d-none')"
                                    title="Editar reserva"
                                    style="width: 36px; height: 36px;">
                                <span class="material-symbols-outlined fs-5">edit</span>
                            </button>

                            <button class="btn btn-light btn-sm rounded-circle p-2 text-danger d-flex align-items-center justify-content-center"
                                    title="Excluir reserva"
                                    style="width: 36px; height: 36px;">
                                <span class="material-symbols-outlined fs-5">delete</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination (mesma estrutura de Usuários / Safras) -->
    <div class="d-flex justify-content-end mt-4">
        <nav aria-label="Navegação de página">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Anterior">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Próximo">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<!-- Modal Overlay Placeholder (Hidden by default) -->
<div id="reservation-form-overlay" class="d-none position-fixed top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 z-3 d-flex justify-content-center align-items-center">
    <div class="bg-white p-4 rounded-3 shadow-lg" style="max-width: 600px; width: 100%;">
        <h3 class="h4 mb-3">Nova / Editar Reserva</h3>
        <form id="reservation-form">
            <div class="mb-3">
                <label for="titulo" class="form-label">Título</label>
                <input type="text" class="form-control" id="titulo" name="titulo" required />
            </div>

            <div class="mb-3">
                <label for="safra" class="form-label">Safra</label>
                <input type="text" class="form-control" id="safra" name="safra" />
            </div>

            <div class="mb-3">
                <label for="usuario" class="form-label">Usuário</label>
                <input type="text" class="form-control" id="usuario" name="usuario" />
            </div>

            <div class="mb-3">
                <label for="dataReserva" class="form-label">Data da Reserva</label>
                <input type="date" class="form-control" id="dataReserva" name="dataReserva" />
            </div>

            <div class="row">
                <div class="col-6 mb-3">
                    <label for="qtdInteira" class="form-label">Qtd. Inteira</label>
                    <input type="number" class="form-control" id="qtdInteira" name="qtdInteira" min="0" />
                </div>
                <div class="col-6 mb-3">
                    <label for="qtdMeia" class="form-label">Qtd. Meia</label>
                    <input type="number" class="form-control" id="qtdMeia" name="qtdMeia" min="0" />
                </div>
            </div>

            <div class="mb-3">
                <label for="valorTotal" class="form-label">Valor Total</label>
                <input type="text" class="form-control" id="valorTotal" name="valorTotal" />
            </div>
        </form>

        <div class="d-flex justify-content-end mt-3">
            <button class="btn btn-secondary me-2" onclick="document.getElementById('reservation-form-overlay').classList.add('d-none')">Cancelar</button>
            <button class="btn btn-success" onclick="salvarReserva()">Salvar</button>
        </div>
    </div>
</div>

<script>
    function salvarReserva() {
        // placeholder: implementar lógica de salvar (chamada ao controller via fetch/submit)
        alert('Salvar reserva (implemente integração com backend).');
        document.getElementById('reservation-form-overlay').classList.add('d-none');
    }
</script>
