@{
    ViewData["Title"] = "Gerenciar Usuários";
}
@model IEnumerable<Admin.Models.UsuarioViewModel>

<div class="container-fluid px-0 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 fw-bold text-dark mb-0">Gerenciar Usuários</h1>
        <a class="btn btn-success d-flex align-items-center fw-semibold shadow-sm" asp-action="Create">
            <span class="material-symbols-outlined me-2">add</span>
            Novo Usuário
        </a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var user in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm rounded-3">
                    <div class="card-body d-flex flex-column justify-content-between p-4">
                        <div>
                            <h3 class="card-title h5 fw-semibold text-dark mb-2">
                                @user.Nome
                            </h3>

                            @if (user.Tipo == 2) // Agências mostram apenas CNPJ
                            {
                                <p class="card-text text-secondary small mb-1 d-flex align-items-center">
                                    <span class="me-1 fw-medium flex-shrink-0">CNPJ:</span>
                                    <span class="text-truncate flex-grow-1" style="min-width:0;" title="@user.CNPJ">@user.CNPJ</span>
                                </p>
                            }
                            else if (user.Tipo == 1) // Famílias mostram Email ou Telefone
                            {
                                <p class="card-text text-secondary small mb-1 d-flex align-items-center">
                                    @if (!string.IsNullOrWhiteSpace(user.Email))
                                    {
                                        <span class="me-1 fw-medium flex-shrink-0">Email:</span>
                                        <span class="text-truncate flex-grow-1" style="min-width:0;" title="@user.Email">@user.Email</span>
                                    }
                                    else
                                    {
                                        <span class="me-1 fw-medium flex-shrink-0">Telefone:</span>
                                        <span class="text-truncate flex-grow-1" style="min-width:0;" title="@user.Telefone">@user.Telefone</span>
                                    }
                                </p>
                            }

                            <p class="card-text text-secondary small mb-3">
                                Tipo:
                                <span class="badge rounded-pill fw-medium px-2 py-1 text-dark"
                                      style="background-color: @(user.Tipo == 1 ? "#FEF9C3" : "#DCFCE7")">
                                    @user.TipoFormatado
                                </span>
                            </p>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-3 pt-2">
                            <a class="btn btn-light btn-sm rounded-circle p-2 text-secondary d-flex align-items-center justify-content-center"
                               asp-action="Details" asp-route-id="@user.Id"
                               title="Ver detalhes" style="width: 36px; height: 36px;">
                                <span class="material-symbols-outlined fs-5">visibility</span>
                            </a>

                            <a class="btn btn-light btn-sm rounded-circle p-2 text-secondary d-flex align-items-center justify-content-center"
                               asp-action="Edit" asp-route-id="@user.Id"
                               title="Editar usuário" style="width: 36px; height: 36px;">
                                <span class="material-symbols-outlined fs-5">edit</span>
                            </a>

                            <a class="btn btn-light btn-sm rounded-circle p-2 text-secondary d-flex align-items-center justify-content-center"
                               asp-action="Delete" asp-route-id="@user.Id"
                               title="Excluir usuário" style="width: 36px; height: 36px;">
                                <span class="material-symbols-outlined fs-5">delete</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-end mt-4">
        <nav aria-label="Navegação de página">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Anterior">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Próximo">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

