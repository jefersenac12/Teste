@{
    ViewData["Title"] = ViewBag.TipoPreSelecionado == 1 ? "Cadastrar Família" : "Cadastrar Agência";
}

@model Admin.Models.UsuarioViewModel

<div class="container-fluid px-0 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h1 class="h3 fw-bold text-dark mb-0">
                        @if (ViewBag.TipoPreSelecionado == 1)
                        {
                            <span class="material-symbols-outlined me-2">family_restroom</span>
                            <text>Cadastrar Família</text>
                        }
                        else if (ViewBag.TipoPreSelecionado == 2)
                        {
                            <span class="material-symbols-outlined me-2">business</span>
                            <text>Cadastrar Agência</text>
                        }
                    </h1>
                    <p class="text-muted">
                        @if (ViewBag.TipoPreSelecionado == 1)
                        {
                            <text>Preencha os dados para cadastrar uma nova família no sistema.</text>
                        }
                        else if (ViewBag.TipoPreSelecionado == 2)
                        {
                            <text>Preencha os dados para cadastrar uma nova agência no sistema.</text>
                        }
                    </p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Tipo" />

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-medium">Nome</label>
                            <input asp-for="Nome" class="form-control" required />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        @if (ViewBag.TipoPreSelecionado == 1)
                        {
                            // Campos para Família
                            <div class="mb-3">
                                <label asp-for="Telefone" class="form-label fw-medium">Telefone</label>
                                <input asp-for="Telefone" class="form-control" required />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                        }
                        else if (ViewBag.TipoPreSelecionado == 2)
                        {
                            // Campos para Agência
                            <div class="mb-3">
                                <label asp-for="Telefone" class="form-label fw-medium">Telefone</label>
                                <input asp-for="Telefone" class="form-control" required />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-medium">Email</label>
                                <input asp-for="Email" class="form-control" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CNPJ" class="form-label fw-medium">CNPJ</label>
                                <input asp-for="CNPJ" class="form-control" required />
                                <span asp-validation-for="CNPJ" class="text-danger"></span>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Senha" class="form-label fw-medium">Senha</label>
                            <input asp-for="Senha" class="form-control" type="password" required />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <span class="material-symbols-outlined me-2">arrow_back</span>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <span class="material-symbols-outlined me-2">save</span>
                                @if (ViewBag.TipoPreSelecionado == 1)
                                {
                                    <text>Cadastrar Família</text>
                                }
                                else if (ViewBag.TipoPreSelecionado == 2)
                                {
                                    <text>Cadastrar Agência</text>
                                }
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
