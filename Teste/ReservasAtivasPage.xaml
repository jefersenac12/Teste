<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teste.ReservasAtivasPage"
             BackgroundColor="#FAF6F3">

    <ScrollView>
        <VerticalStackLayout Spacing="20" 
                            Padding="20"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
            <!-- Container Header -->
            <Border Stroke="#E0E0E0"
          StrokeThickness="1"
          BackgroundColor="White"
          StrokeShape="RoundRectangle 12"
          Padding="16"
          Margin="0,10,0,0">

                <!-- Header com botão voltar -->
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Button Grid.Column="0"
                  Text="←"
                  FontSize="24"
                  TextColor="#333"
                  BackgroundColor="Transparent"
                  WidthRequest="40"
                  HeightRequest="40"
                  VerticalOptions="Center"
                  Clicked="OnVoltarClicked" />

                    <Label Grid.Column="1"
                 Text="Minhas Resevas"
                 FontSize="20"
                 FontAttributes="Bold"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 TextColor="#8B0000" />

                    <Button Grid.Column="2"
                  Text="⋮"
                  FontSize="24"
                  TextColor="#333"
                  BackgroundColor="Transparent"
                  WidthRequest="40"
                  HeightRequest="40"
                  VerticalOptions="Center"
                  Clicked="OnMenuClicked" />
                </Grid>
            </Border>
            <!-- Container Header + Search -->


            <!-- Search Bar -->
            <HorizontalStackLayout Spacing="8" WidthRequest="300">
                <Image Source="search_icon.png"
           WidthRequest="18"
           HeightRequest="18"
           VerticalOptions="Center" />
                <Entry Placeholder="Buscar Por Reservas"
           BackgroundColor="Transparent"
           TextColor="#666"
           PlaceholderColor="#999"
           HorizontalOptions="FillAndExpand"
           VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Abas -->
            <Grid ColumnDefinitions="*,*" 
                  ColumnSpacing="0"
                  Margin="0,20,0,0">

                <!-- Aba Ativas -->
                <VerticalStackLayout Grid.Column="0" Spacing="8">
                    <Button Text="Ativas"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="#8B0000"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            Clicked="OnAtivasClicked" />
                    <BoxView HeightRequest="3"
                             BackgroundColor="#8B0000"
                             HorizontalOptions="Fill" />
                </VerticalStackLayout>

                <!-- Aba Anteriores -->
                <VerticalStackLayout Grid.Column="1" Spacing="8">
                    <Button Text="Anteriores"
                            FontSize="18"
                            TextColor="#8B4513"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            Clicked="OnAnterioresClicked" />
                    <BoxView HeightRequest="3"
                             BackgroundColor="Transparent"
                             HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Grid>

            <!-- Lista de Reservas -->
            <VerticalStackLayout Spacing="16" Margin="0,20,0,0" WidthRequest="300">

                <!-- Card 1 - Pago -->
                <Border Stroke="#E0E0E0"
                        StrokeThickness="1"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 12"
                        Padding="16">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCardClicked" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Café Da Manhã"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#A42D45" />

                        <Label Text="Data: 25 jul, 2024 - 10:00"
                               FontSize="13"
                               TextColor="#A42D45" />

                        <Label Text="Participantes: 2x Adultos, 1x criança"
                               FontSize="13"
                               TextColor="#A42D45" />

                        <Grid ColumnDefinitions="*,Auto" 
                              Margin="0,8,0,0">
                            <Label Grid.Column="0"
                                   Text="Valor: R$ 250,00"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#A42D45"
                                   VerticalOptions="Center" />

                            <Border Grid.Column="1"
                                    BackgroundColor="#F68F55"
                                    StrokeShape="RoundRectangle 12"
                                    Padding="16,6">
                                <Label Text="Pago"
                                       TextColor="White"
                                       FontSize="13"
                                       FontAttributes="Bold" />
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Card 2 - Pendente -->
                <Border Stroke="#E0E0E0"
                        StrokeThickness="1"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 12"
                        Padding="16">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Café Da Manhã Completo"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#A42D45" />

                        <Label Text="Data: 25 jul, 2024 - 10:00"
                               FontSize="13"
                               TextColor="#A42D45" />

                        <Label Text="Participantes: 2x Adultos, 1x criança"
                               FontSize="13"
                               TextColor="#A42D45" />

                        <Grid ColumnDefinitions="*,Auto,Auto" 
                              ColumnSpacing="8"
                              Margin="0,8,0,0">
                            <Label Grid.Column="0"
                                   Text="Valor: R$ 250,00"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#A42D45"
                                   VerticalOptions="Center" />

                            <Border Grid.Column="1"
                                    BackgroundColor="#FCBC71"
                                    StrokeShape="RoundRectangle 12"
                                    Padding="12,6">
                                <Label Text="Pendente"
                                       TextColor="White"
                                       FontSize="13"
                                       FontAttributes="Bold" />
                            </Border>

                            <Button Grid.Column="2"
                                    Text="🗑 Excluir"
                                    TextColor="#666"
                                    FontSize="13"
                                    BackgroundColor="#F5F5F5"
                                    CornerRadius="12"
                                    Padding="12,6"
                                    Clicked="OnExcluirClicked" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Card 3 - Cancelado -->
                <Border Stroke="#E0E0E0"
                        StrokeThickness="1"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 12"
                        Padding="16">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Passeio De Trezinho"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#A42D45" />

                        <Label Text="Data: 25 jul, 2024 - 10:00"
                               FontSize="13"
                               TextColor="#A42D45" />

                        <Label Text="Participantes: 2x Adultos, 1x criança"
                               FontSize="13"
                               TextColor="#A42D45" />

                        <Grid ColumnDefinitions="*,Auto,Auto" 
                              ColumnSpacing="8"
                              Margin="0,8,0,0">
                            <Label Grid.Column="0"
                                   Text="Valor: R$ 250,00"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#A42D45"
                                   VerticalOptions="Center" />

                            <Border Grid.Column="1"
                                    BackgroundColor="#F2686F"
                                    StrokeShape="RoundRectangle 12"
                                    Padding="12,6">
                                <Label Text="Cancelado"
                                       TextColor="White"
                                       FontSize="13"
                                       FontAttributes="Bold" />
                            </Border>

                            <Button Grid.Column="2"
                                    Text="🗑 Excluir"
                                    TextColor="#666"
                                    FontSize="13"
                                    BackgroundColor="#F5F5F5"
                                    CornerRadius="12"
                                    Padding="12,6"
                                    Clicked="OnExcluirClicked" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Card 4 - Pago -->
                <Border Stroke="#E0E0E0"
                        StrokeThickness="1"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 12"
                        Padding="16">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Café Da Manhã"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#A42D45" />

                        <Label Text="Data: 25 jul, 2024 - 10:00"
                               FontSize="13"
                               TextColor="#A42D45" />

                        <Label Text="Participantes: 2x Adultos, 1x criança"
                               FontSize="13"
                               TextColor="#A42D45" />

                        <Grid ColumnDefinitions="*,Auto" 
                              Margin="0,8,0,0">
                            <Label Grid.Column="0"
                                   Text="Valor: R$ 250,00"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#A42D45"
                                   VerticalOptions="Center" />

                            <Border Grid.Column="1"
                                    BackgroundColor="#F68F55"
                                    StrokeShape="RoundRectangle 12"
                                    Padding="16,6">
                                <Label Text="Pago"
                                       TextColor="White"
                                       FontSize="13"
                                       FontAttributes="Bold" />
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>

            <!-- Ver todas as reservas -->
            <Button Text="Ver todas as reservas  ˅"
                    FontSize="14"
                    TextColor="#8B4513"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Margin="0,10,0,10"
                    WidthRequest="300"
                    Clicked="OnVerTodasClicked" />

            <!-- Botão Sair -->
            <Button Text="🚪 Sair"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="#891633"
                    BackgroundColor="White"
                    BorderColor="#E0E0E0"
                    BorderWidth="1"
                    CornerRadius="10"
                    Padding="0,14"
                    Margin="0,0,0,20"
                    WidthRequest="300"
                    Clicked="OnSairClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>