<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
             x:Class="Teste.ReservasAtivasPage"
             BackgroundColor="#FAF6F3"
             Title="Reservas Ativas">

    <ScrollView>
        <VerticalStackLayout Spacing="20"
                             Padding="20"
                             HorizontalOptions="Center"
                             VerticalOptions="Start">

            <!-- CabeÃ§alho -->
            <Border Stroke="#E0E0E0"
                    StrokeThickness="1"
                    BackgroundColor="#FAF6F3"
                    Padding="16"
                    WidthRequest="300"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <shapes:RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>

                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Button Grid.Column="0"
                            Text="â†"
                            FontSize="24"
                            TextColor="#333"
                            BackgroundColor="Transparent"
                            WidthRequest="40"
                            HeightRequest="40"
                            VerticalOptions="Center"
                            Clicked="OnVoltarClicked" />

                    <Label Grid.Column="1"
                           Text="Minhas Reservas"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="#8B0000" />

                    <Button Grid.Column="2"
                            Text="â‹®"
                            FontSize="24"
                            TextColor="#333"
                            BackgroundColor="Transparent"
                            WidthRequest="40"
                            HeightRequest="40"
                            VerticalOptions="Center"
                            Clicked="OnMenuClicked" />
                </Grid>
            </Border>

            <!-- Lista de Reservas -->
            <VerticalStackLayout x:Name="ListaReservasAtivas"
                                 Spacing="16"
                                 Margin="0,0,0,0"
                                 WidthRequest="300"
                                 HorizontalOptions="Center" />

            <Button Text="Ver todas as reservas Ë…"
                    FontSize="14"
                    TextColor="#8B4513"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0"
                    WidthRequest="300"
                    Clicked="OnVerTodasClicked" />

            <Button Text="ðŸšª Sair"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="#891633"
                    BackgroundColor="White"
                    BorderColor="#E0E0E0"
                    BorderWidth="1"
                    CornerRadius="10"
                    Padding="0,14"
                    Margin="0,0,0,20"
                    WidthRequest="300"
                    Clicked="OnSairClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
